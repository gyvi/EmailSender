<?xml version="1.0" encoding="UTF-8" ?>
<phpunit colors="true" verbose="true">
    <testsuites>
        <testsuite name="EmailSender Test Suite">
            <directory>test/Unit/EmailSender</directory>
            <directory>test/Integration/EmailSender</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/EmailSender</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="CodeCoverageReport" charset="UTF-8" highlight="false" lowUpperBound="35" highUpperBound="70" />
    </logging>
</phpunit>
