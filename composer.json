{
  "require": {
    "php": "^7.1",
    "monolog/monolog": "^1.0",
    "slim/slim": "^3.0",
    "slim/twig-view": "^2.2",
    "phpmailer/phpmailer": "^5.2",
    "php-amqplib/php-amqplib": ">=2.6.1",
    "phpmd/phpmd": "^2.6",
    "squizlabs/php_codesniffer": "*",
    "ext-imap": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.2"
  },
  "autoload": {
    "psr-4": {
      "EmailSender\\": "src/EmailSender/",
      "Test\\": "test/"
    }
  },
  "scripts": {
    "phpcs": "./vendor/bin/phpcs ./src --extensions=php --standard=PSR2 -p",
    "phpmd": "./vendor/bin/phpmd ./src/ text cleancode,codesize,controversial,design,unusedcode",
    "phpunit": "./vendor/bin/phpunit -c build/phpunit.xml",
    "phpunit-with-code-coverage": "./vendor/bin/phpunit -c build/phpunit-with-code-coverage.xml"
  }
}
